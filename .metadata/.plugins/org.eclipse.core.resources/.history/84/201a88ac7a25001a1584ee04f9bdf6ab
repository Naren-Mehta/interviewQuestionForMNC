package brillio;

public class PingPong implements Runnable {

	public static int turn = 1;
	private int id;
	private String printValue;

	public PingPong(int id, String val) {
		this.printValue = val;
		this.id = id;
	}

	@Override
	public void run() {

		while (true) {
			if (turn == this.id) {

			}
		}

	}

	public static void main(String[] args) {
			
		Thread t = new Thread(new PingPong(1, "Ping"));
	}

}
